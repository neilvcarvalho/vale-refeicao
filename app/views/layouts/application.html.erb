<!DOCTYPE html>
<html>
<head>
	<title>Cálculo Visa Vale</title>
	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "application" %>
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0;" />
	<%= csrf_meta_tags %>
	<script type="text/javascript">

		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-29691463-1']);
		_gaq.push(['_trackPageview']);

		(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();

	</script>
</head>
<body>
<div class="container">
	<div class="row">
		<div class="span12">
			<div class="navbar navbar-fixed-top">
				<div class="navbar-inner">
						<a href="<%= root_path %>" class="brand">Cálculo Visa Vale</a>
						<ul class='nav'>
							<li><%= link_to 'Consulta direta', [:inquiries] %></li>
								<% if current_user %>
									<li><%= link_to 'Seus cartões', Card %></li>
									<li><%= link_to "Logout de #{truncate(current_user.name, length: 15, separator: ' ')}", signout_path, id: "sign_out" %></li>
								<% else %>
									<li><%= link_to "Login com Facebook", "/auth/facebook", id: "sign_in" %></li>
								<% end %>
						</ul>
				</div>
			</div>
		</div>
	</div>

	<div class="row site-content">
		<div class="span12">
			<%= yield %>
		</div>
	</div>
</body>
</html>
